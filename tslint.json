{
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/.git/**",
      "**/lib/**",
      "**/dist/**",
      "./packages/util/**/*",
      "./packages/g/**/*",
      "./packages/torch/**/*",
      "./packages/istanbul/**/*"
    ]
  },
  "rules": {
    "max-line-length": [ true, 120 ],
    "trailing-comma": [ true, { "multiline": "always", "singleline": "never" } ],
    "array-bracket-spacing": [ false ],
    "import-name": [ false ],
    "function-name": [ false ]
  }
}
